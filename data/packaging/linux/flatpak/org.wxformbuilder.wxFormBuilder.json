{
	"app-id": "org.wxformbuilder.wxFormBuilder",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "23.08",
	"sdk": "org.freedesktop.Sdk",
	"command": "wxformbuilder",
	"finish-args": [
		"--socket=x11",
		"--socket=wayland",
		"--filesystem=host"
	],
	"cleanup": [ "/include" ],
	"modules": [
		{
			"name": "wxWidgets",
			"buildsystem": "autotools",
			"config-opts": [
				"--with-gtk=3",
				"--with-cxx=17",
				"--with-libiconv=/usr"
			],
			"sources": [
				{
					"type": "archive",
					"url": "https://github.com/wxWidgets/wxWidgets/releases/download/v3.2.5/wxWidgets-3.2.5.tar.bz2",
					"sha256": "0ad86a3ad3e2e519b6a705248fc9226e3a09bbf069c6c692a02acf7c2d1c6b51"
				}
			],
			"cleanup": [ "/bin/wx*", "/lib/wx" ]
		},
		{
			"name": "Boost",
			"buildsystem": "simple",
			"build-commands": [
				"./bootstrap.sh",
				"./b2 --prefix=$FLATPAK_DEST --build-dir=./build --with-headers install"
			],
			"sources": [
				{
					"type": "archive",
					"url": "https://boostorg.jfrog.io/artifactory/main/release/1.85.0/source/boost_1_85_0.tar.bz2",
					"sha256": "7009fe1faa1697476bdc7027703a2badb84e849b7b0baad5086b087b971f8617"
				}
			],
			"cleanup": [ "/lib/cmake" ]
		},
		{
			"name": "wxFormBuilder",
			"buildsystem": "cmake",
			"config-opts": [
				"-DCMAKE_BUILD_TYPE=Release"
			],
			"sources": [
				{
					"type": "dir",
					"path": "../../../../"
				}
			]
		}
	]
}
